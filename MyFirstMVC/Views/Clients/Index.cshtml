@model IEnumerable<MyFirstMVC.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Клиенты</h2>

<p >
    @Html.ActionLink("Новый клиент", "Create", null, new { @style = "color: white; text-decoration: none " })
</p>
<table class="TextSlots">
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Пол
        </th>
        <th>
            Документ
        </th>
        <th>
            Дата регистрации
        </th>
        <th>
            Дата рождения
        </th>
        <th>
            Телефон
        </th>
        <th>
            Почта
        </th>
        <th>
            Тип
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr class="AllSlots">
    <td>
        @Html.DisplayFor(modelItem => item.Surname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Patronymic)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Document)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RegistrationDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BirthdayDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ClientType.TypeOfClient)
    </td>
    <td>
        <table>
            @for (int i = 0; i < 3; i++)
            {
                <tr>
                    @if (i == 0)
                    {
                        <td>
                            @Html.ActionLink("Редактировать клиента", "Edit", new { id = item.ClientID })
                        </td>
                    }
                    else if (i == 1)
                    {
                        <td>
                            @Html.ActionLink("Подробнее о клиенте", "Details", new { id = item.ClientID })
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.ActionLink("Удалить клиента", "Delete", new { id = item.ClientID })
                        </td>
                    }
                </tr>
            }
        </table>
    </td>
</tr>
}

</table>
