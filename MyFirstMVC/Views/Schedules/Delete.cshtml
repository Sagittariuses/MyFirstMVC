@model MyFirstMVC.Models.Schedule

@{
    ViewBag.Title = "Delete";
}

<h2 class="PageTitle">Удаление рейса №@Html.DisplayFor(model => model.ScheduleID)</h2>

<div class="PageTitle">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Откуда
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaceOfDeparture)
        </dd>

        <dt>
            Куда
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaceOfArrival)
        </dd>

        <dt>
            Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Продано билетов
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfTicketsPurchased)
        </dd>

        <dt>
            Всего
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalTickets)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="color:white">
            <input type="submit" value="Удалить рейс" class="SaveBtn" /> или вернуться
            @Html.ActionLink("Назад", "Index", null, new { @class = "CRUDBtns" })?
        </div>
    }
</div>
