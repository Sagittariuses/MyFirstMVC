@model MyFirstMVC.Models.Schedule

@{
    ViewBag.Title = "Details";
}

<h2>Рейс №@Html.DisplayFor(model => model.ScheduleID)</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Откуда
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaceOfDeparture)
        </dd>

        <dt>
            Куда
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaceOfArrival)
        </dd>

        <dt>
            Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Продано билетов
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfTicketsPurchased)
        </dd>

        <dt>
            Всего
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalTickets)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.ScheduleID }) или вернуться
    @Html.ActionLink("Назад", "Index")?
</p>
