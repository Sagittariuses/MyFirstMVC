@{
    ViewBag.Title = "Delete";
}

<h2 class="PageTitle">Удаление заявки №@Html.DisplayFor(model => model.ApplicationID)</h2>

<div class="PageTitle">
    <dl class="dl-horizontal">
        <dt>
            Закрыта
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Комментарий
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

        <dt>
            Компания
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>

