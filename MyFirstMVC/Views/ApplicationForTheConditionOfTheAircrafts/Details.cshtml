@model MyFirstMVC.Models.ApplicationForTheConditionOfTheAircraft

@{
    ViewBag.Title = "Details";
}

<h2>Заявка №@Html.DisplayFor(model => model.ApplicationID) </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Закрыта
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Комментарий
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

        <dt>
            Компания
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>

        <dt>
            Самолёт
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Plane.PlaneName)
        </dd>

        <dt>
            Техник
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stuff.Surname)
        </dd>

