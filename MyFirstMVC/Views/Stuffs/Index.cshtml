@model IEnumerable<MyFirstMVC.Models.Stuff>

@{
    ViewBag.Title = "Index";
}

<h2 class="PageTitle">Сотрудники</h2>

<p style="font-style:italic">
    @Html.ActionLink("Добавление сотрудника", "Create", null, new { @class = "CRUDBtns" })
</p>
<table>
    <tr  class="TextSlots">
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Пол
        </th>
        <th>
            Телефон
        </th>
        <th>
            Почта
        </th>
        <th>
            Дата регистрации
        </th>
        <th>
            Дата рождения
        </th>
        <th>
            Должность
        </th>
    </tr>

@foreach (var item in Model) {
    <tr class="AllSlots">
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthdayDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Posts.PostName)
        </td>
        <td>
            <table>
                @for (int i = 0; i < 3; i++)
                {
                    <tr>
                        @if (i == 0)
                        {
                            <th>
                                @Html.ActionLink("Редактировать сотрудника", "Edit", new { id = item.StuffID }, new { @class = "CRUDBtns" })
                            </th>
                        }
                        else if (i == 1)
                        {
                            <th>
                                @Html.ActionLink("Подробнее о сотруднике", "Details", new { id = item.StuffID }, new { @class = "CRUDBtns" })
                            </th>
                        }
                        else
                        {
                            <th>
                                @Html.ActionLink("Удалить сотрудника", "Delete", new { id = item.StuffID }, new { @class = "CRUDBtns" })
                            </th>
                        }
                    </tr>
                }
            </table>
        </td>
    </tr>
}

</table>
